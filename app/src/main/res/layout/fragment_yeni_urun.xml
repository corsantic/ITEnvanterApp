<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View style="@style/divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/urunAdi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="ÜRÜN AÇIKLAMA"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/urunAdiEdt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"

                android:gravity="center"
                android:textAlignment="center" />


        </LinearLayout>

        <View style="@style/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/urunModel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="MODELİ"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/urunModelEdt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"

                android:textAlignment="center" />


        </LinearLayout>

        <View style="@style/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/urunMarka"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="MARKA"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/urunMarkaEdt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"

                android:textAlignment="center" />


        </LinearLayout>

        <View style="@style/divider" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/urunKategori"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="KATEGORİ ID"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/urunKategoriEdt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"

                android:textAlignment="center" />


        </LinearLayout>



        <View style="@style/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvCreate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="EKLENME TARİHİ"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvCreateDateTx"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"

                android:textAlignment="center" />


        </LinearLayout>
        <View style="@style/divider" />





<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageButton
        android:id="@+id/btAztecAdd"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:src="@drawable/aztec"
        android:textAlignment="center" />


    <TextView
        android:id="@+id/barcodeText"
        android:layout_width="159dp"
        android:layout_height="50dp"

        android:inputType="textPersonName"
        android:text="Barkod" />
    <Button
        android:id="@+id/btAdd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="EKLE"
        />


</LinearLayout>


</LinearLayout>
</LinearLayout>